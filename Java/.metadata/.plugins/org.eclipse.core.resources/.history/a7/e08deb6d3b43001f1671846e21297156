package ch04;

public class Ex8 {

	public static void main(String[] args) {
		int sum = 0;
		for(int i = 1; i<=10; i++) {
			System.out.print(i + " + ");
			sum+=i;
		}
		System.out.println(" = " + sum);
		
		sum = 0;
		for(int i = 1; i<=30; i++) {
			if(i%3==0) {
				sum += i;
			}
		}
		System.out.println(sum);
		
		int odd = 0;
		int even = 0;
		for(int i = 1; i<=30; i++) {
			if(i%2==0) {
				even += i;
			}
			else
			{
				odd +=i;
			}
		}
	}

}
