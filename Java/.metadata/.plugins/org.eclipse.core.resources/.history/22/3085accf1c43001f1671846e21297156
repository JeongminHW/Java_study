package ch03;

public class Ex8 {

	public static void main(String[] args) {
		// 배열(아파트) : 동일한 데이터 타입을 하나의 변수로 묶어놓은 것
		int a = 10;
		int b = 20;
		int c = 30;
		
		int sum = a+b+c;
		System.out.println(sum);
		
		//1. 배열 선언
		int arr[] = {a,b,c};
		
		//2. 배열 크기 지정(선언)
		arr = new int[3];
		
		//3. 배열 값 할당
		arr[0] = a;
		arr[1] = b;
		arr[2] = c;
		
		//배열에 값을 할당하거나 값을 가져올 때는 for문 사용
		
		int[] arr1 = new int[5];
		//배열은 내부적으로 Arrays 객체가 만들어지고 length는 배열 길이의 변수(상수)
		for (int i = 0; i < arr1.length; i++) {
			arr1[i] = i*10;
			sum1+=arr1;
			System.out.println(arr1[i]);
		}
	}

}
